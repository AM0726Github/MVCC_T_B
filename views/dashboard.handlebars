<div class="container mt-3">
  <div class="text-center">
      <a type="click" class="btn btn-Warning  mb-3  creatpost hidebtn" id="glowin" 
     href="/dashboard/new-post">Create New Post</a>
  </div>
</div> 
{{#if posts.length}}
<section >
    <h2 style="text-align: center;">Your Posts</h2>
    <ul style="padding: 0px;">
      {{#each posts as |post|}}
      <li>
        <div>
          <div class="container" >
            <div class="row justify-content-md-center">
            <div class="card shadow-sm p-3 mb-1 bg-body rounded" style=" margin-top:5px ;">
              <div>
                <h3><a class="link-Warning" href="/post/{{id}}" style="text-decoration: none;">{{title}}</a></h3>
                <hr>
                <p class="card-text">Posted by {{user.username}} on {{format_date created_at}} </p>
              </div>
              <div class="card-body ">
                <h5 class="card-title">{{content}}</a></h5>
                {{comments.length}} comment(s) <a href="/dashboard/edit/{{post.id}}" style="text-decoration: none;">Edit</a>
              </div>
            </div>
          </div>
        </div>
    </div>
</li>
{{/each}}
</ul>
</section>
{{/if}}

